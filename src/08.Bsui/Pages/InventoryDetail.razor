@page "/inventory/detail/{ItemName}"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8">
    <MudButton StartIcon="@Icons.Material.Filled.ArrowBack" Href="/inventory" Variant="Variant.Text" Class="mb-4">Kembali ke Inventory</MudButton>

    <MudCard Elevation="4" Class="rounded-xl pa-4">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Color="Color.Primary" Variant="Variant.Filled">I</MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.h5" Class="fw-bold">@ItemName</MudText>
                <MudText Typo="Typo.body2">Detail informasi barang</MudText>
            </CardHeaderContent>
        </MudCardHeader>

        <MudCardContent>
            <MudAlert Severity="Severity.Info">Halaman detail untuk barang: <b>@ItemName</b>. (Data dummy belum terhubung ke database)</MudAlert>

            <MudGrid Class="mt-4">
                <MudItem xs="6">
                    <MudText Typo="Typo.subtitle2" Color="Color.Secondary">Lokasi Rak</MudText>
                    <MudText Typo="Typo.h6">A-01 (Dummy)</MudText>
                </MudItem>
                <MudItem xs="6">
                    <MudText Typo="Typo.subtitle2" Color="Color.Secondary">Total Stok</MudText>
                    <MudText Typo="Typo.h6">25 Pcs</MudText>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
</MudContainer>

@code {
    [Parameter] public string ItemName { get; set; }
}