@page "/Main/Upload/"
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Navigations
<MudContainer MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem md="12"
                 sm="12"
                 xs="12">
            <MudGrid>
                <MudItem xs="12">
                    <MudCard Style="box-shadow: none;">
                        <MudGrid>
                            <MudItem xs="12" Class="my-3">
                                Tipe
                            </MudItem>
                            <MudItem xs="12" Class="my-3">
                                Lembar Kerja
                            </MudItem>
                            <MudItem xs="12" Class="my-3">
                                Group
                            </MudItem>
                            <MudItem xs="12" Class="my-3">
                                <label class="mb-2" style="font-size: 12px; color: rgb(121, 116, 126); vertical-align: top;">Upload Excel (.xlsx)</label><br />
                                <SfUploader ID="UploadFiles" AllowedExtensions=".xlsx">
                                    @*   <UploaderEvents ValueChange="OnChange"></UploaderEvents> *@
                                </SfUploader>
                            </MudItem>
                            <MudGrid>
                                <MudItem xs="12" sm="6" md="4" Class="my-3">
                                    <SfButton Type="Button" IsPrimary="true" CssClass="mr-2" IconCss="e-icons e-search" IconPosition="@IconPosition.Left">Upload</SfButton>
                                </MudItem>
                            </MudGrid>
                        </MudGrid>

                    </MudCard>
                </MudItem>
            </MudGrid>

        </MudItem>
    </MudGrid>
</MudContainer>
