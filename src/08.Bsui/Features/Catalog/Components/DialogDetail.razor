<AuthorizeView Context="authorizeContext">
    <Authorized>
        <MudDialog>
            <DialogContent>
                <MudGrid>
                    <MudItem xs="12">
                        <MudItem>
                            Description:
                        </MudItem>
                        <MudItem>
                            @Request.Appdesc
                        </MudItem>
                    </MudItem>
                    @if (authorizeContext.User.HasPermission(Permissions.KpiEnterprise_Catalog_View))
                    {
                        <MudItem xs="12">
                            <MudItem>
                                Business Owner:
                            </MudItem>
                            <MudItem>
                                @Request.Appowner
                            </MudItem>
                        </MudItem>
                        <MudItem xs="12">
                            <MudItem>
                                Business Owner PIC:
                            </MudItem>
                            <MudItem>
                                @Request.Appownerpic
                            </MudItem>
                        </MudItem>
                        <MudItem xs="12">
                            <MudItem>
                                Developer:
                            </MudItem>
                            <MudItem>
                                @Request.Appownerdev
                            </MudItem>
                        </MudItem>
                    }
                    <MudItem xs="12">
                        <MudItem>
                            Link:
                        </MudItem>
                        <MudItem>
                            @if (Request.Applink != "#")
                            {
                                @if (Request.Applink.Contains("atau"))
                                {
                                    @Request.Applink
                                }
                                else
                                {
                                    <MudNavLink Href="@Request.Applink" Target="_blank">
                                        @Request.Applink
                                    </MudNavLink>
                                }
                            }
                            else
                            {
                                @Request.Applink
                            }
                        </MudItem>
                    </MudItem>
                </MudGrid>
                <BottomButtonPanel>
                    <MudButton Variant="Variant.Filled" Color="Color.Default" OnClick="Cancel">Close</MudButton>
                </BottomButtonPanel>
            </DialogContent>
        </MudDialog>
    </Authorized>
</AuthorizeView>
