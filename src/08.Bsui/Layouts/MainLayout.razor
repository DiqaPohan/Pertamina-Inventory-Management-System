@inherits LayoutComponentBase

@using Pertamina.SolutionTemplate.Bsui.Layouts.Constants

<MudThemeProvider Theme="@ThemeFor.MainLayout" />
<MudDialogProvider FullWidth="true" MaxWidth="MaxWidth.Small" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Class="custom-appbar">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <div class="logo"></div>
        <MudText Typo="Typo.h6" Class="ml-3">Pertamina Inventory System</MudText>

        <MudSpacer />

        <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" Class="mr-2" />
        <MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Inherit" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>

        <div class="main-content">
            @Body
        </div>
    </MudMainContent>
</MudLayout>

<MudScrollToTop TopOffset="200">
    <MudFab Color="Color.Warning" Icon="@Icons.Material.Filled.ArrowCircleUp" />
</MudScrollToTop>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
